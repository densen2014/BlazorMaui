                       ShowRefresh="false"
                       IsStriped="false"
                       RenderMode="TableRenderMode.Auto" />
    </TabItem>
    <TabItem Text="表格例子2">
        <Table TItem="Item"
               Items="@records"
               AutoGenerateColumns="true" />
    </TabItem>

@page "/TableDemo2"
@using DemoShared.Models
@attribute [TabItemOption(Text = "表格", Icon = "fa fa-fa")]

<h1>Blazor Demo</h1>
<Title>BlazorMaui</Title>
<TimerAme />

<Tab>
    <TabItem Text="表格例子1">
        <Table TItem="PcStatus"
               Items="@pcStatuss"
               AutoGenerateColumns="true" />
